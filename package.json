{
  "name": "@dc-beauty/monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Beauty Platform - SaaS for beauty salons",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm --filter @dc-beauty/api dev\" \"pnpm --filter @dc-beauty/web-crm dev\" \"pnpm --filter @dc-beauty/web-booking dev\"",
    "build": "pnpm --recursive build",
    "lint": "pnpm --recursive lint",
    "typecheck": "pnpm --recursive typecheck",
    "test": "pnpm --recursive test",
    "clean": "pnpm --recursive clean"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.22.0",
    "@typescript-eslint/parser": "^6.22.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-next": "latest",
    "typescript": "^5.4.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  }
}
