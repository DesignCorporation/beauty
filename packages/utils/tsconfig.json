{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "incremental": true,
    "declaration": true,
    "outDir": "./dist",
    "types": ["node", "jest"]
  },
  "include": [
    "src/**/*",
    "src/**/__tests__/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}